<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    User Information
    <small>Detail</small>
  </h1>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-solid">
        <div class="box-header with-border">
          <i class="fa fa-text-width"></i>
          <h3 class="box-title">Description Horizontal</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt>Username</dt>
            <dd><%= @user.username %></dd>
            <dt>Email</dt>
            <dd><%= @user.email %></dd>
            <dt>Roles</dt>
            <dd>
              <ul>
                <% list_roles(@user).each do |k, v| %>
                  <% if v %>
                    <li><%= k %></li>
                  <% end %>
                <% end %>
              </ul>
            </dd>
          </dl>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <%= link_to 'Back', admin_users_path, class: 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
</section>