<!-- Content Header (Page header) -->
<section class="content-header">
  <h2>Sign Up</h2>
</section>

<section class="content">
  <!-- contoh posisi alert -->
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <h2><i class="icon fa fa-ban"></i><%= pluralize(@user.errors.count, "error") %> prohibited this changefrom being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>
  <%= form_for(resource, as: resource_name, html: {class: 'form-horizontal'}, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group has-feedback">
      <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: 'Email' %>
    </div>

    <div class="form-group has-feedback">
      <%= f.text_field :username, autofocus: false, class: 'form-control', placeholder: 'Username' %>
    </div>

    <div class="form-group has-feedback">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: false, class: 'form-control', placeholder: 'Password' %>
    </div>

    <div class="form-group has-feedback">
      <%= f.password_field :password_confirmation, autofocus: false, class: 'form-control', placeholder: 'Password Confirmation' %>
    </div>

    <div class="row">
      <div class="col-xs-8">
        
      </div>
      <div class="col-xs-4">
        <%= f.submit "Sign Up", class: 'btn btn-primary btn-block btn-flat' %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</section>