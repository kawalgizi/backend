<div class="box-header with-border">
  <h3 class="box-title">Horizontal Form</h3>
</div>
<!-- /.box-header -->
<!-- form start -->
<%= form_for tweet, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="box-body">
    <div class="form-group">
      <%= f.label :username, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tweet, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :tweet, class: 'form-control', placeholder: 'Tweet' %>
      </div>
    </div>
  </div>
  <!-- /.box-body -->
  <div class="box-footer">
    <%= link_to "Cancel", tweets_path, class: 'btn btn-default' %>
    <%= f.submit "Submit", class: 'btn btn-info pull-right' %>
  </div>
  <!-- /.box-footer -->
<% end %>
