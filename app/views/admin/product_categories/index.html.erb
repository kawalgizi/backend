<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Product Categories
    <small>List of Product Category</small>
    <%= link_to 'New Product Category', new_admin_product_category_path, class: 'btn btn-info' %>
  </h1>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Responsive Hover Table</h3>
          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
              <div class="input-group-btn">
                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
            <% @product_categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= link_to 'Show', admin_product_category_path(category) %></td>
                <td><%= link_to 'Edit', edit_admin_product_category_path(category) %></td>
                <td><%= link_to 'Destroy', admin_product_category_path(product_category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
      <!-- /.box -->
    </div>
  </div>
</section>
